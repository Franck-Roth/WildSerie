{% extends "base.html.twig" %}

{% block title %}Wild Séries || Episode {{ episode.title }} - {{ episode.season.program.title }}{% endblock %}
{% block body %}
    <section class="card text-dark m-3 bg-cardvue">
        <div class="card-header bg-secondary">
            <h1 class="text-primary">Episode : {{ episode.title }}</h1>
        </div>
        <div class="media p-3">
            <div>
                <p>Programme : {{ episode.season.program.title }}</p>
                <p>Année : {{ episode.season.year }}</p>
                <p>Numéro : {{ episode.number }}</p>
                <p>Synopsis : {{ episode.synopsis }}</p>
            </div>
        </div>
    </section>
    <a class="btn btn-dark bg-secondary" href="{{ path('wild_season', {'seasonId' : episode.season.id}) }}">
        Retour vers la saison
    </a>
    <a class="btn btn-dark bg-secondary" href="{{ path('wild_program_slug', {'slug' : program.title}) }}">
    Retour vers la série
    </a>

{% endblock %}